<resources>
    <!-- Base application theme. -->
    <style name="Theme.AntiDupeGallery" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue_500</item>
        <!-- Customize your theme here. -->

        <item name="android:icon">@drawable/ic_back_arrow</item>
    </style>

    <style name="BackArrow" parent="Widget.Material3.Button.IconButton">
        <item name="android:src">@drawable/ic_back_arrow</item>
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">0dp</item>
    </style>
</resources>